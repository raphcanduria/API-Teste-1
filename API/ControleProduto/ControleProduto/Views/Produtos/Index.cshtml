
@model IEnumerable<Produtos>
@{
    ViewData["Title"] = "Produtos";
    Layout = "~/Views/Shared/_produtosLayout.cshtml";
}
<a asp-action="AdicionaProdutos" class="btn btn-sm btn-primary">Adicionar Produto</a>
<a asp-action="GetProdutos" class="btn btn-sm btn-secondary">Visualizar Produto</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Descricao</th>
            <th>Estoque</th>
            <th>Preco</th>
            <th>Edita</th>
            <th>Apaga</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr>
                <td>@prod.Codigo</td>
                <td>@prod.Descricao</td>
                <td>@prod.Estoque</td>
                <td>@prod.Preco</td>
                <td>
                    <a asp-action="EditaProduto" asp-route-codigo="@prod.Codigo"><img src="/icon/edit.png" /></a>
                </td>
                <td>
                    <form asp-action="ApagaProduto" method="post">
                        <input type="hidden" value="@prod.Codigo" name="Codigo" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>