@model Produtos
@{
    ViewData["Title"] = "AdicionaProduto";
    Layout = "~/Views/Shared/_produtosLayout.cshtml";
}
<h2>Nova Reserva <a asp-action="Index" class="btn btn-sm btn-outline-success">Retorna</a></h2>

<form asp-action="AdicionaProdutos" method="post">
    <div class="form-group">
        <label for="Descricao">Descricao:</label>
        <input class="form-control" name="Descricao" />
    </div>
    <div class="form-group">
        <label for="Estoque">Estoque:</label>
        <input class="form-control" name="Estoque" />
    </div>
    <div class="form-group">
        <label for="Preco">Preço:</label>
        <input class="form-control" name="Preco" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Novo Produto</button>
    </div>
</form>
@if (Model != null)
{
    <h2>Produto</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>Codigo</th><th>Descricao</th><th>Estoque</th><th>Preco</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.Codigo</td>
                <td>@Model.Descricao</td>
                <td>@Model.Estoque</td>
                <td>@Model.Preco</td>
            </tr>
        </tbody>
    </table>
}